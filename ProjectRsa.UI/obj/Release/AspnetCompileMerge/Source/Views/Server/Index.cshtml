    @model ProjectRsa.UI.Models.ServerPageModel

@{
    ViewBag.Title = "Server-side Implemenation";
}
<h1>Server-side Implemenation</h1>
<div class="row url-input">
    <div class="col-xs-10 col-xs-offset-1 col-md-9 col-md-offset-2">
        <form class="navbar-form" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Add a webpage URL" name="addurl" id="addurl">
                <div class="input-group-btn">
                    <button class="btn btn-primary save all-results" type="submit"><i class="glyphicon glyphicon-ok-sign"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row sites-bar">
    @Html.Partial("PageUrls", Model)
    <div class="row view-options pull-right">
        <form method="POST">
            @Html.HiddenFor(m => m.UrlCsv)
            @Html.Partial("Sort", Model)
            <button id="submitForTest" class="btn btn-primary btn-sm pull-right" type="submit">Submit For Test</button>
        </form>
    </div>
</div>

@Html.Partial("Results", Model)

@section scripts{
    <script src="~/Scripts/serverend-script.js"></script>
}