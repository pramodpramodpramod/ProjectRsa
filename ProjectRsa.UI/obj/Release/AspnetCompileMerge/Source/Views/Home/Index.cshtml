@{
    ViewBag.Title = "FrontEnd Implemenation";
}
<h1>Front-end Implemenation</h1>

<div class="row url-input">
    <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
        <form class="navbar-form" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Add a webpage URL" name="addurl" id="addurl">
                <div class="input-group-btn">
                    <button class="btn btn-primary save all-results" type="submit"><i class="glyphicon glyphicon-ok-sign"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

<br />

<div class="row sites-bar">
    <div id="pageurls" class="row">
    </div>
    <div class="row view-options pull-right">
        <span>Sort By</span>
        <select id="sort-by">
            <option value="SpeedIndex">Speed Index</option>
            <option value="loadTime">Load Time</option>
            <option value="requestsDoc">Requests</option>
            <option value="bytesInDoc">Size</option>
        </select>

        <button class="btn btn-primary btn-sm pull-right" type="button" onclick="showAllResults()">Compare All</button>
    </div>
</div>

<div class="row" id="results-view">
</div>


@section scripts{
    <script src="~/Scripts/config.js"></script>
    <script src="~/Scripts/frontend-scripts.js"></script>
}